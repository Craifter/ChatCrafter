{
  "version": "0.0.1",
  "manifest_version": 3,
  "name": "ChatCrafter",
  "description": "A browser extension that enhances the ChatGPT interface by providing prompt templates in the AIPL format, making it easier to write and use prompts. Streamline the process of crafting effective messages with customizable prompts featuring variables.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatCrafter"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": false,
    "open_in_tab": true
  },
  "icons": {
    "16": "assets/logo/16-black.png",
    "32": "assets/logo/32-black.png",
    "48": "assets/logo/48-black.png",
    "128": "assets/logo/128-black.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "js": [
        "chat-gpt.js"
      ],
      "run_at": "document_end"
    }
  ]
}
